<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
<template id="report_machine_status_template">
     <t t-call="report.html_container">
         <t t-call="cmms.cmms_internal_layout"/>
            <div class="page">
                <div class="row">
                    <table class="table table-condensed">
                        <thead>
                            <th> Sn.</th>
                            <th> Code </th>
                            <th> Name </th>
                            <th> Group </th>
                            <th> Set Code</th>
                            <th> Model </th>
                            <th> Supplier </th>
                            <th> Year </th>
                            <th> Serial No. </th>
                            <th> Condition </th>
                            <th> Status </th>
                            <th> Remarks </th>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="o">
                            <tr t-att-class=" 'warning' if o.state == 'repair' else 'danger' if o.state in ('unstable') else '' ">
                                <td> <span t-esc="o_index +1"/>  </td>
                                <td> <span t-field="o.code"/>  </td>
                                <td> <span t-field="o.name"/>  </td>
                                <td> <span t-field="o.group_id.code"/>  </td>
                                <td> <span t-field="o.set_code"/>  </td>
                                <td> <span t-field="o.model"/>  </td>
                                <td> <span t-field="o.supplier_id.name"/>  </td>
                                <td> <span t-field="o.mfg_year"/>  </td>
                                <td> <span t-field="o.serial_no"/>  </td>
                                <td> <span t-field="o.condition"/>  </td>
                                <td> <span t-field="o.state"/>  </td>
                                <td> <span t-field="o.note"/>  </td>
                            </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
    </t>
</template>
</data>
</odoo>
