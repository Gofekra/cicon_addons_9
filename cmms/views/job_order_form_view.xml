<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    <template id="cmms_job_order_template">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
        <t t-call="cmms.cmms_external_layout">
        <div class="page">
            <div class="row" style="border-bottom:1px" >
            <div class="text-center col-xs-4 col-xs-offset-4">
                <u> JOB ORDER ( <span t-field="o.job_order_type" /> ) </u>
            </div>
            <div class="text-center col-xs-2 col-xs-offset-2" style="border:1px solid" >
              <strong> <span t-field="o.name"  /></strong>
            </div>
            </div>

            <div class="row mt8 mb8">
               <div class="col-xs-2 text-left">
                   Machine Code:
               </div>
                <div class="col-xs-6 text-left">
                     <span t-field="o.machine_id.code"/>
                </div>

            </div>
            <div class="row">
               <div class="col-xs-2 text-left">
                   Machine Name :
               </div>
                <div class="col-xs-6 text-left">
                     <span t-field="o.machine_id.name"/>
                </div>

            </div>
            <div class="row  mb8 mt8">
             <div class="col-xs-10 text-left">
                 <t t-if="o.job_order_type in ('preventive','general')">
                     <u> Description : </u>
                 </t>
                 <t t-if="o.job_order_type == 'breakdown'">
                     <u> Initial Complain / Problem : </u>
                 </t>
                  <br/>
                 <span t-field="o.description"/>
             </div>
             </div>
        </div>
        </t>
        </t>
    </t>
    </template>

    <template id="cmms_job_order_blank_template">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="cmms.cmms_external_layout">
                <div class="page">
                    <div class="row" style="border-bottom:1px" >
                    <div class="text-center col-xs-4 col-xs-offset-4">
                        <u> JOB ORDER ( <span t-field="o.job_order_type" /> ) </u>
                    </div>
                    <div class="text-center col-xs-2 col-xs-offset-2" style="border:1px solid" >
                      <strong> <span t-field="o.name"  /></strong>
                    </div>
                    </div>

                </div>
            </t>
        </t>
    </t>
    </template>
</data>
</openerp>