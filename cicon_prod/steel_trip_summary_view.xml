<?xml version="1.0" encoding="utf-8"?>
    <openerp>
        <data>

        <record model="ir.ui.view" id="cicon_trip_sumamry_tree_view">
			<field name="name">cicon.trip.summary.tree</field>
			<field name="model">cicon.trip.summary</field>
			<field name="arch" type="xml">
                <tree string="Trip Summary" create="false">
                    <field name="name"/>
                    <field name="customer"/>
                    <field name="project"/>
                    <field name="location"/>
                    <field name="trip_date_time"/>
                    <field name="truck_no"/>
                    <field name="driver"/>
                    <field name="transport"/>
                    <field name="wb_weight" sum="WB Total"/>
                    <field name="do_weight" sum="DO Total"/>
                </tree>
			</field>
        </record>



        <record id="cic_trip_summary_search_form" model="ir.ui.view">
        <field name="name">cicon.trip.summary.search.form</field>
        <field name="model">cicon.trip.summary</field>
        <field name="arch" type="xml">
            <search string="Trip Summary">
                <field name="customer"/>
                <field name="project"/>
                <field name="trip_date"/>
                <filter name="to_day_trip" string="To Day" domain="[('trip_date','=',time.strftime('%%Y-%%m-%%d'))]"/>
                <group expand="0" string="Group By...">
                    <filter string="Customer" name="group_trip_customer" icon="terp-folder-violet" domain="[]" context="{'group_by':'customer'}"/>
                </group>

            </search>
        </field>
    </record>




        <record model="ir.actions.act_window" id="action_cicon_trip_summary">
            <field name="name" >Trip Summary </field>
            <field name="res_model">cicon.trip.summary</field>
       </record>


        <menuitem id="menu_cicon_logistics"  name="Logistics" sequence="40" parent="cicon_menu"  groups="cicon_prod.group_prod_user" />
        <menuitem id="menu_cicon_trip_summary" sequence="20" parent="menu_cicon_logistics" action="action_cicon_trip_summary" />


        </data>

    </openerp>