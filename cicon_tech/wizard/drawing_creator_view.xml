<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_drawing_creator" model="ir.ui.view">
            <field name="name">Drawing Creator</field>
            <field name="model">tech.drawing.creator</field>
            <field name="arch" type="xml">
                <form string="Drawing Creator" >
                    <group col="4">
                        <field name="start_no"/>
                        <field name="end_no"/>
                        <field name="name"/>
                        <field name="suffix"/>
                        <field name="status"/>
                        <field name="description"/>
                        <field name="padding_zero"/>

                    </group>
                    <footer>
                        <!--<button name="drawing_generate" string="Generate" type="object" class="oe_highlight" /> -->
                        <!--<button string="Cancel" class="oe_link" special="cancel" />-->
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_drawing_creator" model="ir.actions.act_window">
            <field name="name">Drawing Creator</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tech.drawing.creator</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</openerp>